#!/usr/bin/expect -f
set timeout 5
set port 9999

send "\r"
send_user "\rUDP: Недоступный сервер\r"
send "\r"

spawn ../bin/client 127.0.0.1 udp $port

expect {
    "описание графа" {}
    timeout { exit 0 }
}

send "A B, B C, C D, D E, E F, F G\r"

expect {
    "вершины" {
        send "A D\r"
        expect {
            "Ошибка" { exit 0 }
            timeout { exit 0 }
            eof { exit 0 }
        }
    }
    timeout { exit 0 }
}

send "exit\r"
exit 0